@model List<Project.Services.ViewModels.ReviewViewModel>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<head>
    <link rel="stylesheet" href="/css/reviewsAndUsers.css">
</head>

@foreach (var @item in Model)
{

<div class="review">

    <div class="title">
        <p>@item.ReviewMessage</p>
    </div>

    <div class="class1">
        <p>Date: @item.ReviewDate</p>
    </div>

    <div class="class1">
        <p>Review Author: @item.ReviewAuthorId</p>
    </div>

    @if (User.IsInRole("Admin"))
        {
            <div class="deleteReview">
                <a asp-controller="Review" asp-action="Delete" asp-route-id="@item.ReviewId" class="btn btn-outline-danger">Delete Review</a>
            </div>
        }

</div>

}

<div class="gobackbutton">
<a asp-controller="Recipe" asp-action="Index" class="btn btn-outline-danger">Back To All Recipes</a>
</div>

