@model List<Project.Services.ViewModels.ReviewViewModel>

@foreach (var @item in Model)
{
<head>
    <style>
        body{
            
        }
        .title{
            font-size: 30px;
            font-weight:bold;
            border: 1px solid black;
        }
        .class1{
            border: 1px solid black;
        }
        .review{
            margin-bottom:30px;
        }
    </style>
</head>
<div class="review">

