@{
}

@model List<Project.Services.ViewModels.RecipeCategoryViewModel>

<a asp-controller="RecipeCategory" asp-action="AddRecipeCategory" class="btn btn-outline-danger">Add Recipe Category</a>

@foreach (var @item in Model)
{
<head>
    <style>
        img{
            height:300px;
            width:500px;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            margin-bottom:30px;
        }
        body{

        }
        .title{
            font-size: 50px;
            font-weight:bold;
        }
        .buttons{
            margin-bottom:30px;
        }
    </style>
</head>

    <div class="title">
        <p>@item.RecipeCategoryName</p>
    </div>

    <div class="image">
        <img src="@item.RecipeCategoryImage"/>
    </div>

    <div class="buttons">

        <a asp-controller="RecipeCategory" asp-action="GetRecipesByCategory" asp-route-id="@item.RecipeCategoryId" class="btn btn-outline-danger">Recipes In Category</a>

        @if(User.IsInRole("Admin"))
        {
            <a asp-controller="RecipeCategory" asp-action="Update" asp-route-id="@item.RecipeCategoryId" class="btn btn-outline-danger">Update Recipe Category</a>
            <a asp-controller="RecipeCategory" asp-action="Delete" asp-route-id="@item.RecipeCategoryId" class="btn btn-outline-danger">Delete Recipe Category</a>
        }
    </div>
}

<div class="gobackbutton">
<a asp-controller="Recipe" asp-action="Index" class="btn btn-outline-danger">Back To All Recipes</a>
</div>