@model Project.Services.ViewModels.RecipeCategoryViewModel

<head>
    <style>
        body{
            background: #CA0000;
        }
        form{
            background: white;
        }
        .form-control{
            margin-bottom:40px;
        }
        .container{
            padding:40px;
        }
    </style>
</head>

<form method="post" asp-action="AddRecipeCategory">
    @Html.AntiForgeryToken()
    <div class="container">

        <p><label asp-for="RecipeCategoryName">Recipe Category Name:</label></p>
        <input asp-for="RecipeCategoryName" class="form-control" />

        <p><label asp-for="RecipeCategoryImage">Recipe Category Image:</label></p>
        <input asp-for="RecipeCategoryImage" class="form-control" />

        <div class="buttons">

        <button type="submit" class="btn btn-outline-danger" value="Add Recipe Category">Add Recipe Category</button>

        <a asp-action="Index" class="btn btn-outline-danger">Back To Recipe Categories</a>

        </div>

    </div>
</form>
