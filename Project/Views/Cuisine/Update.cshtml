@model Project.Services.ViewModels.CuisineViewModel

<head>
    <style>
        body{
            background: #CA0000;
        }
        form{
            background: white;
        }
        .form-control{
            margin-bottom:40px;
        }
        .container{
            padding:40px;
        }
    </style>
</head>

<form method="post" asp-action="Update">
    @Html.AntiForgeryToken()
    <div class="container">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input type="hidden" name="CuisineId" value="@Model.CuisineId" />

        <p><label asp-for="CuisineName">Cuisine Name:</label></p>
        <input asp-for="CuisineName" class="form-control" />

        <p><label asp-for="CuisineImage">Cuisine Image:</label></p>
        <input asp-for="CuisineImage" class="form-control" />

        <div class="buttons">

        <button type="submit" class="btn btn-outline-danger" value="Update Cuisine">Update Cuisine</button>

        <a asp-action="Index" class="btn btn-outline-danger">Back To Cuisines</a>

        </div>

    </div>
</form>
