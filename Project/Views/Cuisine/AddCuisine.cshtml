@model Project.Services.ViewModels.CuisineViewModel

<head>
    <style>
        body{
            background: #CA0000;
        }
        form{
            background: white;
        }
        .form-control{
            margin-bottom:40px;
        }
        .container{
            padding:40px;
        }
    </style>
</head>

<form method="post" asp-action="AddCuisine">
    @Html.AntiForgeryToken()
    <div class="container">

        <p><label asp-for="CuisineName">Cuisine Name:</label></p>
        <input asp-for="CuisineName" class="form-control" />

        <p><label asp-for="CuisineImage">Cuisine Image:</label></p>
        <input asp-for="CuisineImage" class="form-control" />

        <div class="buttons">

        <button type="submit" class="btn btn-outline-danger" value="Add Recipe Cuisine">Add Cuisine</button>

        <a asp-action="Index" class="btn btn-outline-danger">Back To Cuisines</a>

        </div>

    </div>
</form>
